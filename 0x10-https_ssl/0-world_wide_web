#!/usr/bin/env bash

# Function to get subdomain information
get_subdomain_info() {
    local domain=$1
    local subdomain=$2
    local result=$(dig +short $subdomain.$domain)
    local record_type="A"

    if [ -z "$result" ]; then
        echo "No record found for $subdomain.$domain"
    else
        echo "The subdomain $subdomain is a $record_type record and points to $result"
    fi
}

# Check if the domain parameter is provided
if [ -z "$1" ]; then
    echo "Usage: $0 <domain> [subdomain]"
    exit 1
fi

# Domain and optional subdomain parameters
domain=$1
subdomain=$2

# If subdomain is provided, display information for the specified subdomain
if [ -n "$subdomain" ]; then
    get_subdomain_info $domain $subdomain
else
    # Display information for predefined subdomains
    for sub in www lb-01 web-01 web-02; do
        get_subdomain_info $domain $sub
    done
fi
